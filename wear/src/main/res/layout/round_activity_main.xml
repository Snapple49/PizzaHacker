<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackergames.hackathon.pizzahacker.MainActivity"
    tools:deviceIds="wear_round">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/basic_pizza"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/screen_percentage_05"
        android:id="@+id/imageView" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputCode"
        android:layout_centerHorizontal="true"
        android:id="@+id/codeAcceptButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inputCode"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputCode"
        android:layout_centerHorizontal="true"
        android:id="@+id/jsonResponseField"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
